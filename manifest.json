{
  "manifest_version": 3,
  "name": "网页二维码",
  "version": "1.0",
  "description": "优雅地将当前网页转换为带网站图标的二维码",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
} 